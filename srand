#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

// Fungsi untuk menampilkan isi array
void tampilkan_array(int data[], int n, string keterangan = "") {
    if (keterangan != "") {
        cout << keterangan << ": ";
    }
    cout << "[ ";
    for (int i = 0; i < n; i++) {
        cout << data[i];
        if (i < n - 1) cout << ", ";
    }
    cout << " ]" << endl;
}

// Fungsi untuk menyalin array
void salin_array(int sumber[], int tujuan[], int n) {
    for (int i = 0; i < n; i++) {
        tujuan[i] = sumber[i];
    }
}

// BUBBLE SORT dengan visualisasi setiap putaran
void bubble_sort(int data[], int n) {
    cout << "\n=== BUBBLE SORT ===" << endl;
    cout << "Data awal: ";
    tampilkan_array(data, n);
    cout << endl;
    
    for (int i = 0; i < n - 1; i++) {
        cout << "Putaran " << (i + 1) << ":" << endl;
        bool ada_pertukaran = false;
        
        for (int j = 0; j < n - i - 1; j++) {
            if (data[j] > data[j + 1]) {
                // Tukar elemen
                int temp = data[j];
                data[j] = data[j + 1];
                data[j + 1] = temp;
                ada_pertukaran = true;
                
                cout << "  Tukar data[" << j << "]=" << data[j+1] 
                     << " dengan data[" << (j+1) << "]=" << data[j] << " -> ";
                tampilkan_array(data, n);
            }
        }
        
        if (!ada_pertukaran) {
            cout << "  Tidak ada pertukaran (sudah terurut)" << endl;
        }
        
        cout << "  Hasil putaran " << (i + 1) << ": ";
        tampilkan_array(data, n);
        cout << endl;
    }
    
    cout << "Data akhir setelah Bubble Sort: ";
    tampilkan_array(data, n);
}

// SELECTION SORT dengan visualisasi setiap putaran
void selection_sort(int data[], int n) {
    cout << "\n=== SELECTION SORT ===" << endl;
    cout << "Data awal: ";
    tampilkan_array(data, n);
    cout << endl;
    
    for (int i = 0; i < n - 1; i++) {
        cout << "Putaran " << (i + 1) << ":" << endl;
        
        // Cari elemen terkecil
        int min_idx = i;
        for (int j = i + 1; j < n; j++) {
            if (data[j] < data[min_idx]) {
                min_idx = j;
            }
        }
        
        cout << "  Elemen terkecil: data[" << min_idx << "]=" << data[min_idx] << endl;
        
        // Tukar elemen terkecil dengan elemen di posisi i
        if (min_idx != i) {
            int temp = data[i];
            data[i] = data[min_idx];
            data[min_idx] = temp;
            
            cout << "  Tukar data[" << i << "] dengan data[" << min_idx << "]" << endl;
        } else {
            cout << "  Sudah di posisi yang tepat, tidak perlu tukar" << endl;
        }
        
        cout << "  Hasil putaran " << (i + 1) << ": ";
        tampilkan_array(data, n);
        cout << endl;
    }
    
    cout << "Data akhir setelah Selection Sort: ";
    tampilkan_array(data, n);
}

int main() {
    // 1. DEKLARASI VARIABEL
    int n;
    int data_asli[100];
    int data_bubble[100];
    int data_selection[100];
    
    cout << "========================================" << endl;
    cout << "  PROGRAM PERBANDINGAN ALGORITMA SORT  " << endl;
    cout << "========================================" << endl;
    
    // 2. INISIALISASI DATA menggunakan rand()
    cout << "\nMasukkan jumlah data yang akan diurutkan: ";
    cin >> n;
    
    // Inisialisasi bibit bilangan acak
    srand(time(0));
    
    cout << "\nMenghasilkan " << n << " bilangan acak..." << endl;
    for (int i = 0; i < n; i++) {
        data_asli[i] = rand() % 100; // Bilangan acak 0-99
    }
    
    cout << "Data acak yang dihasilkan: ";
    tampilkan_array(data_asli, n);
    
    // Salin data asli ke array untuk setiap algoritma
    salin_array(data_asli, data_bubble, n);
    salin_array(data_asli, data_selection, n);
    
    // 3. TERAPKAN ALGORITMA PENGURUTAN dengan visualisasi
    cout << "\n\n";
    cout << "########################################" << endl;
    bubble_sort(data_bubble, n);
    
    cout << "\n\n";
    cout << "########################################" << endl;
    selection_sort(data_selection, n);
    
    cout << "\n========================================" << endl;
    cout << "           PROGRAM SELESAI              " << endl;
    cout << "========================================" << endl;
    
    return 0;
}
