#include <iostream>
#include <cstdlib>
#include <ctime>
#include <chrono>
#include <iomanip>
using namespace std;
using namespace std::chrono;

// Fungsi untuk menampilkan isi array
void tampilkan_array(int data[], int n, string keterangan = "") {
    if (keterangan != "") {
        cout << keterangan << ": ";
    }
    cout << "[ ";
    for (int i = 0; i < n && i < 20; i++) { // Tampilkan max 20 elemen
        cout << data[i];
        if (i < n - 1 && i < 19) cout << ", ";
    }
    if (n > 20) cout << " ...";
    cout << " ]" << endl;
}

// Fungsi untuk menyalin array
void salin_array(int sumber[], int tujuan[], int n) {
    for (int i = 0; i < n; i++) {
        tujuan[i] = sumber[i];
    }
}

// BUBBLE SORT
void bubble_sort(int data[], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (data[j] > data[j + 1]) {
                int temp = data[j];
                data[j] = data[j + 1];
                data[j + 1] = temp;
            }
        }
    }
}

// SELECTION SORT
void selection_sort(int data[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int min_idx = i;
        for (int j = i + 1; j < n; j++) {
            if (data[j] < data[min_idx]) {
                min_idx = j;
            }
        }
        if (min_idx != i) {
            int temp = data[i];
            data[i] = data[min_idx];
            data[min_idx] = temp;
        }
    }
}

// INSERTION SORT
void insertion_sort(int data[], int n) {
    for (int i = 1; i < n; i++) {
        int key = data[i];
        int j = i - 1;
        while (j >= 0 && data[j] > key) {
            data[j + 1] = data[j];
            j--;
        }
        data[j + 1] = key;
    }
}

// MERGE SORT
void array_merge(int data[], int first, int mid, int last) {
    int n1 = mid - first + 1;
    int n2 = last - mid;
    int* tmp_left = new int[n1];
    int* tmp_right = new int[n2];

    for (int i = 0; i < n1; i++)
        tmp_left[i] = data[first + i];
    for (int i = 0; i < n2; i++)
        tmp_right[i] = data[mid + 1 + i];

    int i = 0, j = 0, k = first;
    while (i < n1 && j < n2) {
        if (tmp_left[i] <= tmp_right[j]) {
            data[k] = tmp_left[i];
            i++;
        } else {
            data[k] = tmp_right[j];
            j++;
        }
        k++;
    }

    while (i < n1) {
        data[k] = tmp_left[i];
        i++;
        k++;
    }

    while (j < n2) {
        data[k] = tmp_right[j];
        j++;
        k++;
    }

    delete[] tmp_left;
    delete[] tmp_right;
}

void merge_sort(int data[], int first, int last) {
    if (first < last) {
        int mid = (first + last) / 2;
        merge_sort(data, first, mid);
        merge_sort(data, mid + 1, last);
        array_merge(data, first, mid, last);
    }
}

// QUICK SORT
int partition(int data[], int low, int high) {
    int pivot = data[high];
    int i = low - 1;
    
    for (int j = low; j < high; j++) {
        if (data[j] < pivot) {
            i++;
            int temp = data[i];
            data[i] = data[j];
            data[j] = temp;
        }
    }
    int temp = data[i + 1];
    data[i + 1] = data[high];
    data[high] = temp;
    return i + 1;
}

void quick_sort(int data[], int low, int high) {
    if (low < high) {
        int pi = partition(data, low, high);
        quick_sort(data, low, pi - 1);
        quick_sort(data, pi + 1, high);
    }
}

// Fungsi untuk mengukur waktu eksekusi
long long ukur_waktu_bubble(int data[], int n) {
    auto start = high_resolution_clock::now();
    bubble_sort(data, n);
    auto stop = high_resolution_clock::now();
    auto duration = duration_cast<microseconds>(stop - start);
    return duration.count();
}

long long ukur_waktu_selection(int data[], int n) {
    auto start = high_resolution_clock::now();
    selection_sort(data, n);
    auto stop = high_resolution_clock::now();
    auto duration = duration_cast<microseconds>(stop - start);
    return duration.count();
}

long long ukur_waktu_insertion(int data[], int n) {
    auto start = high_resolution_clock::now();
    insertion_sort(data, n);
    auto stop = high_resolution_clock::now();
    auto duration = duration_cast<microseconds>(stop - start);
    return duration.count();
}

long long ukur_waktu_merge(int data[], int n) {
    auto start = high_resolution_clock::now();
    merge_sort(data, 0, n - 1);
    auto stop = high_resolution_clock::now();
    auto duration = duration_cast<microseconds>(stop - start);
    return duration.count();
}

long long ukur_waktu_quick(int data[], int n) {
    auto start = high_resolution_clock::now();
    quick_sort(data, 0, n - 1);
    auto stop = high_resolution_clock::now();
    auto duration = duration_cast<microseconds>(stop - start);
    return duration.count();
}

void uji_performa(int n) {
    cout << "\n================================================" << endl;
    cout << "  PENGUJIAN DENGAN " << n << " DATA" << endl;
    cout << "================================================" << endl;
    
    // Alokasi memori dinamis untuk data besar
    int* data_asli = new int[n];
    int* data_temp = new int[n];
    
    // Generate data acak
    cout << "\nMenghasilkan " << n << " bilangan acak..." << endl;
    for (int i = 0; i < n; i++) {
        data_asli[i] = rand() % 10000;
    }
    
    cout << "Data yang dihasilkan ";
    tampilkan_array(data_asli, n);
    cout << endl;
    
    // Test Bubble Sort
    cout << "1. BUBBLE SORT" << endl;
    salin_array(data_asli, data_temp, n);
    long long waktu_bubble = ukur_waktu_bubble(data_temp, n);
    cout << "   Waktu eksekusi: " << waktu_bubble << " mikrosekon (" 
         << fixed << setprecision(3) << waktu_bubble/1000.0 << " ms)" << endl;
    cout << "   Hasil ";
    tampilkan_array(data_temp, n);
    cout << endl;
    
    // Test Selection Sort
    cout << "2. SELECTION SORT" << endl;
    salin_array(data_asli, data_temp, n);
    long long waktu_selection = ukur_waktu_selection(data_temp, n);
    cout << "   Waktu eksekusi: " << waktu_selection << " mikrosekon (" 
         << fixed << setprecision(3) << waktu_selection/1000.0 << " ms)" << endl;
    cout << "   Hasil ";
    tampilkan_array(data_temp, n);
    cout << endl;
    
    // Test Insertion Sort
    cout << "3. INSERTION SORT" << endl;
    salin_array(data_asli, data_temp, n);
    long long waktu_insertion = ukur_waktu_insertion(data_temp, n);
    cout << "   Waktu eksekusi: " << waktu_insertion << " mikrosekon (" 
         << fixed << setprecision(3) << waktu_insertion/1000.0 << " ms)" << endl;
    cout << "   Hasil ";
    tampilkan_array(data_temp, n);
    cout << endl;
    
    // Test Merge Sort
    cout << "4. MERGE SORT" << endl;
    salin_array(data_asli, data_temp, n);
    long long waktu_merge = ukur_waktu_merge(data_temp, n);
    cout << "   Waktu eksekusi: " << waktu_merge << " mikrosekon (" 
         << fixed << setprecision(3) << waktu_merge/1000.0 << " ms)" << endl;
    cout << "   Hasil ";
    tampilkan_array(data_temp, n);
    cout << endl;
    
    // Test Quick Sort
    cout << "5. QUICK SORT" << endl;
    salin_array(data_asli, data_temp, n);
    long long waktu_quick = ukur_waktu_quick(data_temp, n);
    cout << "   Waktu eksekusi: " << waktu_quick << " mikrosekon (" 
         << fixed << setprecision(3) << waktu_quick/1000.0 << " ms)" << endl;
    cout << "   Hasil ";
    tampilkan_array(data_temp, n);
    cout << endl;
    
    // Ringkasan
    cout << "------------------------------------------------" << endl;
    cout << "RINGKASAN WAKTU EKSEKUSI (untuk " << n << " data):" << endl;
    cout << "------------------------------------------------" << endl;
    cout << left << setw(20) << "Algoritma" << setw(20) << "Mikrosekon" << "Milidetik" << endl;
    cout << "------------------------------------------------" << endl;
    cout << left << setw(20) << "Bubble Sort" << setw(20) << waktu_bubble 
         << fixed << setprecision(3) << waktu_bubble/1000.0 << " ms" << endl;
    cout << left << setw(20) << "Selection Sort" << setw(20) << waktu_selection 
         << fixed << setprecision(3) << waktu_selection/1000.0 << " ms" << endl;
    cout << left << setw(20) << "Insertion Sort" << setw(20) << waktu_insertion 
         << fixed << setprecision(3) << waktu_insertion/1000.0 << " ms" << endl;
    cout << left << setw(20) << "Merge Sort" << setw(20) << waktu_merge 
         << fixed << setprecision(3) << waktu_merge/1000.0 << " ms" << endl;
    cout << left << setw(20) << "Quick Sort" << setw(20) << waktu_quick 
         << fixed << setprecision(3) << waktu_quick/1000.0 << " ms" << endl;
    cout << "------------------------------------------------" << endl;
    
    // Tentukan algoritma tercepat
    long long tercepat = waktu_bubble;
    string nama_tercepat = "Bubble Sort";
    
    if (waktu_selection < tercepat) {
        tercepat = waktu_selection;
        nama_tercepat = "Selection Sort";
    }
    if (waktu_insertion < tercepat) {
        tercepat = waktu_insertion;
        nama_tercepat = "Insertion Sort";
    }
    if (waktu_merge < tercepat) {
        tercepat = waktu_merge;
        nama_tercepat = "Merge Sort";
    }
    if (waktu_quick < tercepat) {
        tercepat = waktu_quick;
        nama_tercepat = "Quick Sort";
    }
    
    cout << "\nAlgoritma TERCEPAT: " << nama_tercepat 
         << " (" << tercepat << " mikrosekon)" << endl;
    
    delete[] data_asli;
    delete[] data_temp;
}

int main() {
    // Inisialisasi bibit bilangan acak
    srand(time(0));
    
    cout << "========================================" << endl;
    cout << "  ANALISIS PERFORMA ALGORITMA SORTING  " << endl;
    cout << "========================================" << endl;
    
    int pilihan;
    cout << "\nPilih mode pengujian:" << endl;
    cout << "1. Uji dengan ukuran data yang dipilih" << endl;
    cout << "2. Uji dengan berbagai ukuran data (1.000, 10.000, 50.000)" << endl;
    cout << "Pilihan: ";
    cin >> pilihan;
    
    if (pilihan == 1) {
        int n;
        cout << "\nMasukkan jumlah data: ";
        cin >> n;
        uji_performa(n);
    } else if (pilihan == 2) {
        cout << "\n*** PENGUJIAN BERTAHAP ***" << endl;
        uji_performa(1000);
        uji_performa(10000);
        uji_performa(50000);
        
        cout << "\n\n================================================" << endl;
        cout << "  KESIMPULAN ANALISIS PERFORMA" << endl;
        cout << "================================================" << endl;
        cout << "\n1. ALGORITMA O(n²) - Bubble, Selection, Insertion Sort:" << endl;
        cout << "   - Waktu eksekusi meningkat drastis dengan data besar" << endl;
        cout << "   - Cocok untuk data kecil (< 1.000 elemen)" << endl;
        cout << "   - Insertion Sort umumnya lebih cepat dari Bubble & Selection" << endl;
        
        cout << "\n2. ALGORITMA O(n log n) - Merge Sort & Quick Sort:" << endl;
        cout << "   - Waktu eksekusi jauh lebih efisien untuk data besar" << endl;
        cout << "   - Quick Sort umumnya paling cepat dalam praktik" << endl;
        cout << "   - Merge Sort lebih stabil dan konsisten" << endl;
        
        cout << "\n3. PERBANDINGAN KINERJA:" << endl;
        cout << "   - Pada 1.000 data: Perbedaan belum terlalu signifikan" << endl;
        cout << "   - Pada 10.000 data: Algoritma O(n²) mulai lambat" << endl;
        cout << "   - Pada 50.000+ data: Hanya O(n log n) yang praktis" << endl;
        
        cout << "\n4. REKOMENDASI:" << endl;
        cout << "   - Data kecil: Insertion Sort (sederhana & cepat)" << endl;
        cout << "   - Data besar: Quick Sort (tercepat dalam praktik)" << endl;
        cout << "   - Perlu stabilitas: Merge Sort (performa konsisten)" << endl;
        cout << "================================================" << endl;
    }
    
    cout << "\n\nProgram selesai!" << endl;
    
    return 0;
}
